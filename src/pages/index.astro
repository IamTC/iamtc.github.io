---
// Layout
import Experience from "../components/Experience";
import Intro from "../components/Intro";
import Projects from "../components/Projects";
import Layout from "../layouts/project.astro";
import {experience} from '../experience';
import {projects} from '../projects';

// Styles
import "../styles/global.css";
import "../styles/index.css";
---
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">

<Layout
  content={{
    lang: "en",
    title: "Thiwanka Dissanayaka",
    tags: ["portfolio", "thiwanka", "dissanayaka", "thiwanka dissanayaka"],
    description: "Thiwanka Dissanayaka",
  }}
>
  <div class="main">
    <div class="left">
      <Experience title="Experience" projects={experience}client:idle></Experience>
      <Experience title="Projects" projects={projects}client:idle></Experience>
    </div>
    <div class="right">
      <div class="section">
        <Intro client:load />
      </div>
    </div>
  </div>
</Layout>
