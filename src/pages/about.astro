---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer/index.jsx';
import Scroller from '../components/Scroller/index.jsx';

---

<html lang="en">
  <head>
    <MainHead title="About | Jeanine White" />
    <style lang="scss">
      .heroImg {
        object-fit: cover;

        img {
          width: 100%;
          height: 100%;
        }
      }

      .bio {
        font-size: var(--f-u1);
        line-height: 2;
      }
    </style>
  </head>
  <body>
  <Scroller back="/" client:load>
    <div class="wrapper">
      <h1>About Jeanine</h1>
      <div class="heroImg">
        <img width="1400" height="350" src="https://images.unsplash.com/photo-1581977012607-4091712d36f9?auto=format&fit=crop&w=1400&h=350&q=75" />
      </div>
      <div class="bio wrapper wrapper__readable mt8">
      </div>
    </div>
    <Footer />
  </Scroller>
</body>
</html>
